<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "10dp"
        android:layout_marginRight = "10dp"
        android:layout_marginTop = "20dp"
        android:orientation = "vertical">
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "horizontal">
            <LinearLayout
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:orientation = "vertical">
                <TextView
                    android:id="@+id/tv_myridesC_dateTime"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:text = "Wed, May 24, 05:41 PM"
                    android:textColor = "@color/BlackTextColor"
                    android:textSize = "12sp" />
                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "5dp"
                    android:orientation = "horizontal">
                    <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "CRN :"
                        android:textColor = "@color/BlackTextColor"
                        android:textSize = "12sp" />
                    <TextView
                        android:id = "@+id/tv_myridesC_CRN"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "1234567890"
                        android:textColor = "@color/OrangeTextColor"
                        android:textSize = "12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:orientation = "vertical">
                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_gravity = "right"
                    android:orientation = "horizontal">
                    <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_marginRight = "3dp"
                        android:text = "@string/rs"
                        android:textColor = "@color/BlackTextColor"
                        android:textSize = "18sp" />
                    <TextView
                        android:id = "@+id/tv_myridesC_totalAMt"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "125"
                        android:textColor = "@color/BlackTextColor"
                        android:textSize = "18sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_myridesC_status"
                    android:layout_width = "wrap_content"
                    android:layout_height = "25dp"
                    android:layout_marginTop = "5dp"
                    android:background = "@drawable/completed_btn"
                    android:stateListAnimator = "@null"
                    android:text = "Completed"
                    android:textAllCaps = "false"
                    android:textColor = "@color/GreenTextColor"
                    android:textSize = "13sp" />
            </LinearLayout>
        </LinearLayout>


        <!--Pick/Drop Outer-->
        <LinearLayout
            android:id="@+id/layout_onClick"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "20dp"
            android:background = "@drawable/white_box"
            android:orientation = "horizontal"
            android:paddingBottom = "10dp"
            android:paddingLeft = "15dp"
            android:paddingRight = "15dp"
            android:paddingTop = "10dp">


            <!--Pick/Drop Icon-->
            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "3dp"
                android:layout_marginRight = "10dp"
                android:orientation = "vertical">
                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "match_parent"
                    android:layout_marginTop = "4dp"
                    android:orientation = "vertical">
                    <LinearLayout
                        android:layout_width = "10dp"
                        android:layout_height = "10dp"
                        android:background = "@drawable/pickup_circle"
                        android:orientation = "vertical">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width = "1dp"
                        android:layout_height = "42dp"
                        android:layout_gravity = "center_horizontal"
                        android:background = "@color/BorderGreyColor"
                        android:orientation = "vertical">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width = "10dp"
                        android:layout_height = "10dp"
                        android:background = "@drawable/drop_circle"
                        android:orientation = "vertical">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Pick/Drop Icon Ends-->


            <LinearLayout
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:orientation = "vertical">
                <TextView
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:text = "Pickup Location"
                    android:textColor = "@color/GreenTextColor"
                    android:textSize = "12sp" />

                <TextView
                    android:id="@+id/tv_myridesC_pickUpLoc"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:ellipsize = "end"
                    android:maxLines = "1"
                    android:text = "Shubhshree colony, H.No. 101, N-6, Cidco, Aurangabad, Maharashtra"
                    android:textColor = "@color/BlackTextColor"
                    android:textSize = "11sp" />

                <TextView
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "15sp"
                    android:text = "Drop Location"
                    android:textColor = "@color/RedTextColor"
                    android:textSize = "12sp" />

                <TextView
                    android:id="@+id/tv_myridesC_dropLoc"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:ellipsize = "end"
                    android:maxLines = "1"
                    android:text = "Baba Petrol Pump, Jalna Road, Aurangabad"
                    android:textColor = "@color/BlackTextColor"
                    android:textSize = "11sp" />
            </LinearLayout>
        </LinearLayout>
        <!--Pick/Drop Outer Ends-->
    </LinearLayout>

    <!--Dashed Line-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:background="@drawable/dashed_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">
    </LinearLayout>

</LinearLayout>